

<%- include('../../partials/head')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">
<div class="container-fluid">

    <div class="row">
        <div class="col-md-2">
            <%- include("../../partials/sideNav")%>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-body my-5">
                        <h1><%= title %></h1>

                    <div class="profile-pics">
                        <img 
                            src="<%= user.profilePic %>"
                             alt="profile pics"
                             class="img-fluid img-thumbnail "
                             id="jahangir"
                        >

                        <form 
                            action="/upload/profilePica"
                            id="profilePicsFrom"
                            class="my-2"
                            
                        >
                            <input 
                               type="file" 
                               name="profilePics" 
                               id="profilePicsFile" 
                               accept="image/*"
                            >
                            <input
                               type="button" 
                               value="Remove Pics" 
                               class="btn btn-danger btn-sm my-2"
                               style="display:  <%= user.profilePic.includes('defult.jpg') ? 'none': 'block' %>"
                                id="removeProfilePics" 
                            >
                        </form>  
                    </div>
                
                    <form action="/deshbord/edit-profile" method="POST">
                        <div class="form-group">
                            <label for="name">Enter Your Name</label>
                            <input
                                type="text"
                                name="name"
                                class="form-control <%= error.name ? 'is-invalid':''%>" 
                                placeholder="Enter Your Name " 
                                value="<%= profile.name%>"
                                id="name"
                            >
                            <div class="invalid-feedback">
                                <%= error.name%>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Enter Your Email</label>
                            <input
                                type="text"
                                name="email"
                                class="form-control" 
                                placeholder="Enter Your Name " 
                                id="email"
                                value="<%= user.email %>"
                                disabled
                            >
                        </div>

                        <div class="form-group">
                            <label for="title">Enter Your Title</label>
                            <input
                                type="text"
                                value="<%= profile.title%>"
                                name="title"
                                class="form-control  <%= error.title ? 'is-invalid':''%> " 
                                placeholder="Enter Your Title " 
                               
                                id="title"
                            >
                            <div class="invalid-feedback">
                                <%= error.title%>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="bio">Enter Your Short Bio</label>
                            <input
                                name="bio"
                                class="form-control  <%= error.bio ? 'is-invalid':''%>" 
                                id="bio"
                                value="<%= profile.bio%>"
                            
                                
                            >
                            <div class="invalid-feedback">
                                <%= error.bio%>
                            </div>
                        </div>

                        <div>
                            <p class="lead">Your Social Links</p>

                            <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <ion-icon name="globe-outline"></ion-icon>
                                       
                                    </span>
                                </div>
                                <input 
                                    type="text"
                                    class="form-control  <%= error.website ? 'is-invalid':''%> " 
                                    placeholder="Your Website Link"
                                    name="website"
                                    value="<%= profile.links.website%>"
                                >
                                <div class="invalid-feedback">
                                <%= error.website%>
                            </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <ion-icon name="logo-facebook"></ion-icon>
                                       
                                    </span>
                                </div>
                                <input 
                                    type="text"
                                    class="form-control  <%= error.facebook ? 'is-invalid':''%> "
                                    placeholder="Your Facebook Link"
                                    name="facebook"
                                    value="<%= profile.links.facebook%>"
                                >
                                <div class="invalid-feedback">
                                <%= error.facebook%>
                            </div>
                            </div>
                 
                        <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <ion-icon name="logo-twitter"></ion-icon>
                                    </span>
                                </div>
                                <input 
                                    type="text"
                                    class="form-control  <%= error.twitter ? 'is-invalid':''%> "
                                    placeholder="Your Twitter Link"
                                    name="twitter"
                                    value="<%= profile.links.twitter%>"
                                >
                                <div class="invalid-feedback">
                                <%= error.twitter%>
                            </div>
                        </div>
    
                        <div class="input-group mb-3">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <ion-icon name="logo-github"></ion-icon>
                                    </span>
                                </div>
                                <input 
                                    type="text"
                                    class="form-control  <%= error.github ? 'is-invalid':''%> "
                                    placeholder="Your Github Link"
                                    name="github"
                                    value="<%= profile.links.github%>"
                                >
                                <div class="invalid-feedback">
                                <%= error.github%>
                            </div>

                        </div>
                        <input type="submit" value="Update Profile" class="btn btn-primary">
                        
                    </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="crop-modal" data-backdrop="static" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Resize Your Image</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="cropped-image"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-primary" id="upload-image" type="button">Upload</button>
      </div>
    </div>
  </div>
</div>

<br>
<br>
<br>
<%- include('../../partials/footer')%>
<script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>

<script src="/public/scripts/profilePicsUpload.js"></script>


</body>
</html>