

<%- include('../../../partials/head.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">
<div class="container-fluid">

    <div class="row">
        <div class="col-md-2">
            <%- include("../../../partials/sideNav")%>
        </div>

        <div class="col-md-10">
            <div class="card card-body my-5 py-5 mx-5">
                 <h5 class="my-3"> List Of My Post </h5>
                 <div class="row">
                     <% if(posts.length === 0){ %>
                        <h5 style="display: block;">Ther is no available right now </h5>
                        <a href="/posts/create" class="btn btn-primary">Create New Post</a>
                     <% } else{ %>
                            <% for(let post of posts.reverse()){ %>
                                <div class="card col-sm-3 m-3">
                                    <% if(post.thumbnail) {%>
                                        <img src="<%= post.thumbnail %>" alt="<% post.title %>" class="card-img-top mt-3">
                                    <% } %>
                                    <div class="card-body">
                                        <a href="/posts/edit/<%= post._id%>" style="color: #222;" >
                                        <h5><%= post.title%></h5>
                                    </a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                 </div>               
            </div>
                
            </div>
        </div>

    </div>
</div>
<br>
<br>

<%- include('../../../partials/footer')%>



</body>
</html>

