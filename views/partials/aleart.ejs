<div class="my-">
    <% if (flashMessage.success){ %>
        <div class="  alert alert-success alert-dismissable fade show my-3" role="alert">
            <%= flashMessage.success %>
            <button class="close" data-dismiss="alert" aria-level="close" >
                <span aria-hidden="true"> &times;</span>
            </button>
        </div>

    <% } %>

    <% if (flashMessage.fail){ %>
        <div class="alert alert-danger  alert-dismissable fade show my-3" role="alert">
            <%= flashMessage.fail %>
            <button class="close" data-dismiss="alert" aria-level="close" >
                <span aria-hidden="true"> &times;</span>
            </button>
        </div>
 
    <% } %>
</div>